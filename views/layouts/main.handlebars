<html lang="en">

  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, shrink-to-fit=no"
    />
    <title>Home - HeartfeltRSVP</title>
    <meta
      name="description"
      content="This is an application to help with the head aches of wedding planning by taking care of the RSVP process. The future and MR and MRS and will create an invitation list and prospective guests and the guest will then sign in using a 1+1 authentication process and RSVP to the gathering."
    />
    <link rel="stylesheet" href="/public/bootstrap/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Inter:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&amp;display=swap"
    />
    <link rel="stylesheet" href="/public/css/Login-Form-Basic-icons.css" />
    <link rel="stylesheet" href="/public/css/local-styles.css" />
  </head>

  <body>
    <nav
      class="navbar navbar-light navbar-expand-md sticky-top flex-wrap navbar-shrink py-3"
      id="mainNav"
    >
      <div class="container"><a
          class="navbar-brand d-flex align-items-center"
          href="/"
        ><span><img
              class="logo"
              src="/public/img/logo-no-background.svg"
              width="250px"
            /></span></a><button
          data-bs-toggle="collapse"
          class="navbar-toggler"
          data-bs-target="#navcol-1"
        ><span class="visually-hidden">Toggle navigation</span><span
            class="navbar-toggler-icon"
          ></span></button>
        <div
          class="collapse navbar-collapse text-center d-lg-flex justify-content-center justify-content-lg-center"
          id="navcol-1"
        >
          <ul class="navbar-nav me-auto">
            <li class="nav-item"><a
                class="nav-link fs-5 active home-link"
                href="/"
              >Home</a></li>
            <li class="nav-item"></li>
            <li class="nav-item"></li>
            <li class="nav-item"></li>
            <li class="nav-item"></li></ul>
          {{#if logged_in}}
            <button
              class="btn btn-primary btn-color"
              id="user-logout"
              type="button"
            >Logout</button>
            <button
              class="btn btn-primary btn-color"
              id="rsvp-btn"
              type="button"
            >RSVP</button>
          {{else}}
            <button
              class="btn btn-primary btn-color login-btn"
              id="login-btn"
              type="button"
            >Login</button>
          {{/if}}

        </div>
      </div>
    </nav>
    <section></section>
    <section class="bg-primary-gradient">
      <div class="container pt-5">
        {{{body}}}
        <footer class="text-center">
          <div class="container text-muted py-4 py-lg-5">
            <ul class="list-inline">

              <li id="contact-us-link" class="list-inline-item me-4"><a
                  href="/api/user/contact"
                  class=""
                >Contact Us</a></li>
              <li class="list-inline-item me-4"><a href="#">GitHub</a></li>
              <li class="list-inline-item"></li>
            </ul>
            <p class="mb-0">2023 HeartfeltRSVP project contributors: Kaylin,
              Youlormans Hilaire, Michael Kent, Luis Robles</p>
          </div>
        </footer>
      </div>
    </section>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.js"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
      integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
      crossorigin="anonymous"
    ></script>
    <script src="/public/js/bold-and-bright.js"></script>
    <script src="/public/js/home-links.js"></script>
  </body>

</html>
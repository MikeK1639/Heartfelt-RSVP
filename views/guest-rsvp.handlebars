<section class="py-5">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <h2 class="fw-bold">Check-in</h2>
      </div>
    </div>
    <section class="check-in-container">
      <div class="container">
        <div
          class="row d-flex justify-content-center align-items-start align-items-lg-start"
        >
          <div
            class="col-md-6 col-xl-4 align-items-center align-content-center align-self-center"
          >
            <div class="card mb-5">
              <div class="card-body d-flex flex-column align-items-center">
                <form id="rsvp-response" data-event="{{id}}" class="text-center" method="post">
                  {{! ! ::::: NAME ::::: }}
                  <div class="mb-3"><input
                      id="guest-name"
                      class="form-control"
                      type="text"
                      name="input"
                      placeholder="Enter your full name"
                    /></div>
                  <div class="mb-3"></div>
                  <div class="mb-3">
                    <div
                      class="form-check text-center d-flex align-items-center align-content-center justify-content-xl-center radio-btn-container"
                      id="radio-yes"
                      name="a"
                    >
                      {{! ! ::::: RADIO BUTTON I'LL BE THERE ::::: }}
                      <input
                        class="form-check-input radio-margin"
                        type="radio"
                        id="formCheck-1"
                        name="a"
                        value="true"
                      /><label
                        class="form-check-label fs-5 text-start align-items-center"
                        for="formCheck-1"
                      >I'll be there</label></div>
                    <div
                      class="form-check text-center d-flex align-items-center align-content-center justify-content-xl-center radio-btn-container"
                      name="a"
                      id="radio-yes-1"
                    >
                      {{! ! ::::: RADIO BUTTON I CAN'T MAKE IT ::::: }}
                      <input
                        class="form-check-input radio-margin"
                        type="radio"
                        id="formCheck-2"
                        name="a"
                        value="false"
                      /><label
                        class="form-check-label fs-5 text-start rsvp-confirm align-items-center"
                        for="formCheck-1"
                      >I can't make it</label>
                    </div>
                    {{! ! ::::: CONFIRM BUTTON ::::: }}
                    <button
                      class="btn radio-margin btn-primary d-block w-100 cant-makeit btn-rsvp"
                      type="submit"
                    >Confirm</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="modal fade" role="dialog" tabindex="-1" id="modal-1">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Thank for checking in!</h4><button
              class="btn-close"
              type="button"
              aria-label="Close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <p id="modal-message"></p>
          </div>
          <div class="modal-footer"><button
              class="btn btn-light"
              type="button"
              data-bs-dismiss="modal"
            >Close</button>
            {{! <button
              class="btn btn-primary"
              type="button"
            >Save</button> }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="py-5">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-8 col-xl-6 text-center mx-auto">
        <h2 class="fw-bold">Check-in</h2>
      </div>
    </div>
    <section class="check-in-container">
      <div class="container">
        <div
          class="row d-flex justify-content-center align-items-start align-items-lg-start"
        >
          <div class="col-md-6 col-xl-4">
            <div class="card mb-5">
              <div class="card-body d-flex flex-column align-items-center">
                <form id="rsvp-response" class="text-center" method="post">
                  <div class="mb-3"><input
                      id="guest-name"
                      class="form-control"
                      type="text"
                      name="input"
                      placeholder="Enter your full name"
                    /></div>
                  <div class="mb-3"></div>
                  <div class="mb-3"><button
                      class="btn btn-primary d-block w-100 btn-rsvp mb-3"
                      type="submit"
                      id="attending"
                      data-attending="true"
                      value="true"
                    >I'll be there!</button><button
                      class="btn btn-primary d-block w-100 cant-makeit btn-rsvp"
                      type="submit"
                      data-attending="false"
                    >I can't make it</button></div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="modal fade" role="dialog" tabindex="-1" id="modal-1">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Modal Title</h4><button
              class="btn-close"
              type="button"
              aria-label="Close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          // ::::::::::::::::: // ::::: MODAL ::::: // :::::::::::::::::
          <div class="modal-body">
            <p>The content of your modal.</p>
          </div>
          <div class="modal-footer"><button
              class="btn btn-light"
              type="button"
              data-bs-dismiss="modal"
            >Close</button><button
              class="btn btn-primary"
              type="button"
            >Save</button></div>
        </div>
      </div>
    </div>
  </div>
</section>